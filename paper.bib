	keywords = {irrigation, adoption, agriculture 4.0, farmer behavior, Internet of things, operations management, precision agriculture, satellite, sensing technologies, weather station},
}

@incollection{mouniane_impact_2024,
	address = {Cham},
	title = {Impact of {Remote} {Sensing} on {Irrigation} {Management} in {Precision} {Agriculture}},
